<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.CounterDatabase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/csgoAccent</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSurface">@color/csgoSurface</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="android:colorBackground">@color/csgoBackground</item>
        <item name="android:statusBarColor">@color/csgoBackground</item>
        <item name="android:navigationBarColor">@color/csgoBackground</item>
    </style>

    <style name="Theme.CounterDatabase" parent="Base.Theme.CounterDatabase" />

    <style name="TextAppearance.App.MenuTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.App.MenuSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.App.HeroTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.App.HeroSubtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="Widget.HomeCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">@dimen/home_card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/cardStroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>