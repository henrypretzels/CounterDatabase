<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CounterDatabase">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.skins.SkinsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.skins.SkinDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stickers.StickersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stickers.StickerDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.highlights.HighlightsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.highlights.HighlightDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.highlights.FullscreenVideoActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.crates.CratesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.crates.CrateDetailsActivity"
            android:exported="false" />
    </application>

</manifest>